{
	"name": "ms-seed-nest",
	"version": "2.0.0",
	"seedVersion": "2.0.0",
	"description": "Base project for pickit micro services.",
	"author": "Pickit",
	"private": true,
	"license": "UNLICENSED",
	"scripts": {
		"prebuild": "rimraf dist",
		"build": "nest build",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\" \"src/**/*.prisma\"",
		"start": "nest start",
		"start:local": "nest start --debug 0.0.0.0:9662 --watch",
		"start:prod": "node dist/main",
		"lint": "eslint \"{src,test}/**/*.ts\" --fix",
		"check-lint": "eslint \"{src,test}/**/*.ts\"",
		"migration:generate": "prisma migrate dev --schema=src/infrastructure/secondary-adapters/database/schema.prisma",
		"migration:run": "prisma migrate deploy --schema=src/infrastructure/secondary-adapters/database/schema.prisma",
		"prisma:generate": "prisma generate --schema=src/infrastructure/secondary-adapters/database/schema.prisma",
		"prisma:studio": "prisma studio --schema=src/infrastructure/secondary-adapters/database/schema.prisma",
		"test": "NODE_PATH=. mocha -r ts-node/register './test/unit/**/*.ts'",
		"test:cov": "NODE_PATH=. nyc --report-dir ./coverage/unit --reporter lcov -a --cwd ./ mocha -r ts-node/register './test/unit/**/*.ts'",
		"test:e2e": "NODE_PATH=. PICKIT_ENV=e2e mocha -r ts-node/register 'test/integration/**/*.ts' --timeout 100000",
		"test:e2e:cov": "TESTCONTAINERS_RYUK_DISABLED=true NODE_PATH=. PICKIT_ENV=e2e nyc --report-dir ./coverage/integration --reporter lcov -a --cwd ./ mocha -r ts-node/register 'test/integration/**/*.ts' --timeout 100000",
		"test:arch": "NODE_PATH=. mocha -r ts-node/register './test/architecture/**/*.ts' --timeout 60000"
	},
	"dependencies": {
		"@aws-sdk/client-s3": "^3.735.0",
		"@aws-sdk/s3-request-presigner": "^3.735.0",
		"@code-scarecrow/base": "^1.1.1",
		"@golevelup/nestjs-rabbitmq": "^4.1.0",
		"@golevelup/profiguration": "^0.2.1",
		"@liaoliaots/nestjs-redis": "^10.0.0",
		"@nestjs/axios": "^3.1.2",
		"@nestjs/common": "^10.4.13",
		"@nestjs/config": "^3.3.0",
		"@nestjs/core": "^10.4.13",
		"@nestjs/microservices": "^10.4.13",
		"@nestjs/platform-express": "^10.4.13",
		"@nestjs/swagger": "^8.0.7",
		"@prisma/client": "^5.10.2",
		"amqp-connection-manager": "^4.1.6",
		"amqplib": "^0.10.3",
		"aws-sdk": "^2.1190.0",
		"class-transformer": "^0.4.0",
		"class-validator": "^0.14.0",
		"dotenv": "^16.0.1",
		"mysql": "^2.18.1",
		"nestjs-s3": "^2.0.1",
		"reflect-metadata": "^0.1.13",
		"rimraf": "^3.0.2",
		"rxjs": "^7.2.0",
		"swagger-ui-express": "^4.5.0",
		"uuid": "^8.3.2"
	},
	"devDependencies": {
		"@code-scarecrow/base-tests": "^1.0.1",
		"@faker-js/faker": "^9.7.0",
		"@nestjs/cli": "^10.4.8",
		"@nestjs/schematics": "^10.2.3",
		"@nestjs/testing": "^10.4.13",
		"@shelf/jest-dynamodb": "^3.3.1",
		"@types/amqplib": "^0.8.2",
		"@types/chai": "^4.3.11",
		"@types/chai-as-promised": "^7.1.8",
		"@types/express": "^4.17.13",
		"@types/mocha": "^10.0.6",
		"@types/multer": "^1.4.11",
		"@types/node": "^22.10.10",
		"@types/redis-mock": "^0.17.1",
		"@types/supertest": "^2.0.11",
		"@types/uuid": "^8.3.4",
		"@typescript-eslint/eslint-plugin": "^5.0.0",
		"@typescript-eslint/parser": "^5.0.0",
		"aws-sdk-mock": "^5.7.0",
		"axios": "^1.3.1",
		"axios-mock-adapter": "^1.21.2",
		"callable-instance": "^2.0.0",
		"chai": "^4.3.10",
		"chai-as-promised": "^7.1.1",
		"eslint": "^8.0.1",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-folders": "^1.0.4",
